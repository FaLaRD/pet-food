doctype html
html(lang="ru-RU")

    head

        meta(charset="utf-8")

        - const pageTitle = 'The List of Pages'

        title #{pageTitle}

        meta(name="viewport" content="width=device-width,initial-scale=1")
        meta(name="keywords" content="")

        style.
            body {
                background: #fafafa;
                font-family: Roboto, sans-serif;
                line-height: 1.5;
            }

            .wrapper {
                max-width: 800px;
                margin: 0 auto;
            }

            h1 {
                font-weight: 300;
                border-bottom: 1px solid #e6e6e6;
                padding-bottom: 15px;
            }

            a {
                color: #0074D9;
            }

            a:visited {
                color: #85144b;
            }

            a:hover {
                text-decoration: none;
            }

            a:active {
                color: #001f3f;
            }

    body

        .wrapper

            h1 #{pageTitle}

            ol
                li #[a(href="/index.html" target="_blank") Start Page (dashboard)]

            h2 Core

            ol
                li #[a(href="/styleguide.html") Styleguide (UI Kit)]
                li #[a(href="/typography.html") Typography]
                li #[a(href="/components.html") Components]
                li #[a(href="/post.html") Post (Article)]
